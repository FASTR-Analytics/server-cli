# Clerk Authentication
# Get these from https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_secret_here

# Domain Configuration
# Base domain for server instances (e.g., example.com creates server-id.example.com)
DOMAIN=example.com

# Server Configuration File Path
# Path to servers.json (copy servers.json.example to servers.json)
SERVERS_FILE_PATH=/path/to/servers.json

# Docker Volume Paths
# Directory where server instance data will be stored
MOUNT_PATH=/mnt/volume_data

# Nginx Configuration Paths
# Directories for nginx site configurations
SITES_AVAILABLE_PATH=/etc/nginx/sites-available
SITES_ENABLED_PATH=/etc/nginx/sites-enabled

# Database Configuration
# PostgreSQL root password for Docker containers
POSTGRES_PASSWORD=your_secure_password_here

# Anthropic AI Configuration
# API credentials for AI features
ANTHROPIC_API_URL=https://api.anthropic.com/v1/messages
ANTHROPIC_API_KEY=sk-ant-your_api_key_here

# PostgreSQL Client Password
# Password for connecting to PostgreSQL instances
PG_PASSWORD=your_pg_password_here
